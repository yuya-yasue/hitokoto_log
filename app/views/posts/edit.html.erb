<!-- app/views/posts/new.html.erb -->

<h2 class="mb-4">新規投稿</h2>

<%= form_with model: @post, local: true, class: "card shadow-sm p-4" do |f| %>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :content, "投稿内容", class: "form-label" %>
    <%= f.text_area :content, rows: 4, class: "form-control" %>
  </div>

  <div>
    <%= f.submit "投稿する", class: "btn btn-primary" %>
    <%= link_to "戻る", posts_path, class: "btn btn-secondary ms-2" %>
  </div>
<% end %>